{% doc %}
  @prompt
    create a grid showcase of all the collections I have created with their display photos, whenever someone clicks on them, take them to the page of their separate collections for example- if someone clicks on the collection "Trays" he should be taken to the Trays collection page where he could scroll through different products in that category
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collections-grid-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-collections-grid__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-collections-grid__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-collections-grid__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-collections-grid__item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-collections-grid__link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .ai-collections-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
    background-color: {{ block.settings.placeholder_bg_color }};
  }

  .ai-collections-grid__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-collections-grid__item-{{ ai_gen_id }}:hover .ai-collections-grid__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collections-grid__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-collections-grid__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collections-grid__overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, {{ block.settings.overlay_opacity }}), transparent);
    padding: {{ block.settings.overlay_padding }}px;
    transition: background 0.3s ease;
  }

  .ai-collections-grid__item-{{ ai_gen_id }}:hover .ai-collections-grid__overlay-{{ ai_gen_id }} {
    background: linear-gradient(to top, rgba(0, 0, 0, {{ block.settings.overlay_opacity | plus: 0.2 }}), transparent);
  }

  .ai-collections-grid__title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0;
    text-align: {{ block.settings.title_alignment }};
  }

  .ai-collections-grid__description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 8px 0 0;
    text-align: {{ block.settings.title_alignment }};
  }

  .ai-collections-grid__count-{{ ai_gen_id }} {
    color: {{ block.settings.count_color }};
    font-size: {{ block.settings.count_size }}px;
    margin: 4px 0 0;
    text-align: {{ block.settings.title_alignment }};
  }

  .ai-collections-grid__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-collections-grid__empty-state-{{ ai_gen_id }} h3 {
    margin: 0 0 12px;
    font-size: 20px;
  }

  .ai-collections-grid__empty-state-{{ ai_gen_id }} p {
    margin: 0;
    font-size: 14px;
  }

  @media screen and (max-width: 989px) {
    .ai-collections-grid__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collections-grid__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-collections-grid__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.85);
    }

    .ai-collections-grid__description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.85);
    }
  }
{% endstyle %}

<collections-grid-{{ ai_gen_id }} class="ai-collections-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-collections-grid__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  {% if collections.size > 0 %}
    <div class="ai-collections-grid__container-{{ ai_gen_id }}">
      {% for collection in collections %}
        {% if block.settings.max_collections == 0 or forloop.index <= block.settings.max_collections %}
          <div class="ai-collections-grid__item-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-collections-grid__link-{{ ai_gen_id }}">
              <div class="ai-collections-grid__image-wrapper-{{ ai_gen_id }}">
                {% if collection.image %}
                  <img
                    src="{{ collection.image | image_url: width: 800 }}"
                    alt="{{ collection.image.alt | escape }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                    class="ai-collections-grid__image-{{ ai_gen_id }}"
                  >
                {% else %}
                  <div class="ai-collections-grid__image-placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                <div class="ai-collections-grid__overlay-{{ ai_gen_id }}">
                  <h3 class="ai-collections-grid__title-{{ ai_gen_id }}">{{ collection.title }}</h3>
                  
                  {% if block.settings.show_description and collection.description != blank %}
                    <p class="ai-collections-grid__description-{{ ai_gen_id }}">
                      {{ collection.description | strip_html | truncate: 80 }}
                    </p>
                  {% endif %}

                  {% if block.settings.show_product_count %}
                    <p class="ai-collections-grid__count-{{ ai_gen_id }}">
                      {{ collection.products_count }}
                      {% if collection.products_count == 1 %}
                        product
                      {% else %}
                        products
                      {% endif %}
                    </p>
                  {% endif %}
                </div>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% else %}
    <div class="ai-collections-grid__empty-state-{{ ai_gen_id }}">
      <h3>No collections yet</h3>
      <p>Create your first collection to showcase your products</p>
    </div>
  {% endif %}
</collections-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionsGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.initializeGrid();
      }

      initializeGrid() {
        const items = this.querySelectorAll('.ai-collections-grid__item-{{ ai_gen_id }}');
        
        items.forEach((item, index) => {
          item.style.animationDelay = `${index * 0.1}s`;
        });
      }
    }

    customElements.define('collections-grid-{{ ai_gen_id }}', CollectionsGrid{{ ai_gen_id }});
  })();
</script>

